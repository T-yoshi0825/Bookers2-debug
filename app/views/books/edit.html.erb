<div class="row">
  <div class="col-md-6 col-md-offset-3">

  <h1>Editing Book</h1>
	<%= form_for(@book) do |f| %>
	 <% if @book.errors.any? %>
	   <div class="alert alert-warning">
	   <%= @book.errors.count %>errors prohibited this obj flom being save:<br>
	   <% @book.errors.full_messages.each do |massage| %>
	   <%= massage %>
	   <% end %>
	   </div>
	 <% end %>
		<div class="field row">
			<%= f.label :title %>
			<%= f.text_field :title, class: "col-xs-12 book_title" %>
		</div>

		<div class="field row">
			<%= f.label :opinion %> <!-- ここを変更 -->
			<%= f.text_area :body, class: "col-xs-12 book_body" %>
		</div>

		<div class="actions row">
			<%= f.submit "Update Book", class: "btn btn-primary btn-block" %>
		</div>
  
        <%= link_to "Show", @book, class: "book_#{@book.id}" %> |
        <%= link_to "Back", books_path, class: "back" %>
    <% end %>

  <div class="col-md-3"></div>

  </div>
</div>