<div class="container">
  <div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= render 'users/profile', users: @user %>
		<!--同コントローラーのviewで表示ならusersは省略可 -->

		
		<%= render 'books/newform', book: @book %>
    </div>
    <div class="col-xs-9">
		<h2>Books</h2>
		<!--books一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td>
						
						<%= attachment_image_tag book.user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
						
					</td>
					<td><%= link_to book_path(book.id) do %>
						<%= book.title %>
						<% end %>
					</td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
  </div>
</div>
<!--books一覧 -->

